<%- include('../compartido/estilos-generales/estilos-generales-component') %>
<%- include('../compartido/menu/menu-component') %>

<a href="/rol/vista/crear">
    <button>
        CREAR
    </button>
</a>

<% if(typeof parametrosConsulta != 'undefined') {%>
    <p> MENSAJE: <%= parametrosConsulta.mensaje%></p>
<% }%>

<table>
    <tr>
        <th>Nombre</th>
        <th>Acciones</th>
        <!--   ESTO ES PARA UNA VISTA DE ADMINISTRADOR YA QUE SOLO INGRESA LOS ROLES -->
    </tr>

    <% arregloRoles.forEach((objeto) => { %>
        <tr>
            <td><%= objeto.nombre %></td>
            <td>
                <button>Ver</button>
                <a href="/rol/vista/editar/<%=objeto.rolId%>">
                    <button>Editar</button>
                </a>
                <form action="/rol/eliminarDesdeVista/<%= objeto.rolId %>" method="post">
                    <button>Eliminar</button>
                </form>
            </td>
        </tr>
    <% }) %>

</table>
